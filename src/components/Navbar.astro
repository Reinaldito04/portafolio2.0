<nav class="navbar">
    <div class="container-fluid">
      <img src="logo.png" />
      <ul>
        <li><a id="aboutLink" href="#about">Sobre m√≠</a></li>
        <li><a id="skillsLink" href="#skills">Skills</a></li>
        <li><a id="portfolioLink" href="#project">Portafolio</a></li>
        <li><a id="contactLink" href="#contact">Contacto</a></li>
      </ul>
      <div>
        <button id="butonIdioma"></button>
      </div>
    </div>
  </nav>
  
  <script is:inline>
    let currentLanguage = 'en';
    let texts = {};
  
    async function loadTexts() {
      try {
        const enResponse = await fetch('/locales/en.json');
        const esResponse = await fetch('/locales/es.json');
  
        if (!enResponse.ok || !esResponse.ok) {
          throw new Error("Error loading language files");
        }
  
        const en = await enResponse.json();
        const es = await esResponse.json();
  
        texts = { en, es };
        updateTexts();
      } catch (error) {
        console.error("Error loading language files:", error);
      }
    }
  
    function updateTexts() {
      document.getElementById("butonIdioma").textContent = texts[currentLanguage].changeLanguage;
      document.getElementById("aboutLink").textContent = texts[currentLanguage].about;
      document.getElementById("skillsLink").textContent = texts[currentLanguage].skills;
      document.getElementById("portfolioLink").textContent = texts[currentLanguage].project;
      document.getElementById("contactLink").textContent = texts[currentLanguage].contact;
      document.getElementById("AboutMeText").textContent = texts[currentLanguage].aboutMeText;
    }
  
    async function changeLanguage() {
      currentLanguage = currentLanguage === 'en' ? 'es' : 'en';
      updateTexts();
    }
  
    document.addEventListener("DOMContentLoaded", async function () {
      await loadTexts(); // Cargar textos al inicio
      const button = document.getElementById("butonIdioma");
      button.addEventListener("click", changeLanguage);
    });
  </script>
  
